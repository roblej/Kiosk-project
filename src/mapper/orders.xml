<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="orders">
    <select id="status" resultType="vo.OrderVO">
        select * from orders ORDER BY o_idx DESC <!-- 내림차순 -->
    </select>

    <update id="update" parameterType="vo.OrderVO">
        UPDATE orders
        SET o_status = #{o_status}
        WHERE o_idx = #{o_idx}
    </update>
</mapper>
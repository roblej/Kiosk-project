<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="orders">

    <select id="status" resultType="vo.order_VO">
        select * from orders </select>

    <select id="selectDistinctCategories" resultType="String">
        SELECT DISTINCT p_category FROM products WHERE p_category IS NOT NULL
    </select>

    <update id="update" parameterType="vo.order_VO">
        UPDATE orders
        SET o_status = #{o_status}
        WHERE o_idx = #{o_idx}
    </update>

</mapper>